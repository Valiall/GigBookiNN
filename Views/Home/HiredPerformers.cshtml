@model IEnumerable<PerformerViewModel>;
<body>
    <h3>Hired Performers:</h3>
    <hr />
    <br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th>Description</th>
                <th>Type</th>
                <th>Image</th>
                <th>Rating</th>
                <th>Experience</th>
                <th>Price</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Genre</td>
                    <td>@item.Description</td>
                    <td>@item.Type</td>
                    <td><img src="@item.ImageUrl" alt="" style="width:150px;height:135px" /></td>
                    <td>@item.Rating</td>
                    <td>@item.Experience</td>
                    <td>@item.Price</td>
                    <td a asp-controllers="Performer" asp-action="Delete" asp-route-id=item.Id
                        class="btn btn-danger">
                        Delete
                    </td>


                </tr>


            }

        </tbody>

    </table>

</body>


        }
        }
