@model GigBookin.Models.RemovePerformerViewModel
@{
    ViewBag.Title = "Remove Performer";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #dc3545;
            color: white;
            border-radius: 10px 10px 0 0;
            text-align: center;
            font-weight: bold;
            padding: 20px;
        }

        .card-body {
            padding: 30px;
        }

        .btn {
            border-radius: 5px;
            padding: 10px 20px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        Remove Performer
                    </div>
                    <div class="card-body">
                        <p class="text-center">Are you sure you want to remove <strong>@ViewBag.Name</strong> from the Performers catalog?</p>

                        <form method="post" asp-action="Remove" asp-controller="Performer">
                            <div class="text-center">
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <a href="/" class="btn btn-secondary">No</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
