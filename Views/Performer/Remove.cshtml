@model GigBookin.Models.RemovePerformerViewModel
@{
    ViewBag.Title = "Remove Performer";
}

<h2 class="text-center">Remove Performer</h2>

<hr />
<form method="post" action="Remove" class="mt-5">​

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <p>Are you sure you want to remove <strong>@ViewBag.Name</strong> from the Performers catalog?</p>

        <button type"submit" class="btn btn-danger"
                asp-action="Remove"
                asp-controller="Performer"> Yes</button>
       
        <button type"submit" class="btn btn-danger"
                asp-action="Index"
                asp-controller="Home">
            No
        </button>
    </div>
</div>
</form>
