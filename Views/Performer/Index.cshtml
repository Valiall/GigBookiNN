<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Performers</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

       

   /*      .filter-container,
        .performers-container {
            flex: 1;
            margin-right: 20px; /* Adjust margin between containers
        }
 */
        .container {
            display: grid;
            grid-template-rows: 200px 200px 200px 200px 200px 200px;
            grid-template-columns: 200px 200px 200px 200px 200px 200px;
        }

        .filter-container {
            grid-row: 1 /9; /* spanning all rows */
            grid-column: 1 /3; /* starting from the first column and spanning until the third column */
            background-color: #A27868;
            padding: 20px; /* add padding for spacing */
        }

        .performers-container {
            grid-row: span 3; /* spanning all rows */
            grid-column: span 3; /* starting from the fourth column and spanning until the ninth column */
            padding: 20px; /* add padding for spacing */
        }

       /*  .performers-container {
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: stretch;
        }
 */
        .performer-card {
            background-color: #f0f0f0;
            border: 1px solid #ddd;
            border-radius: 10px;
            width: 250px;
            height: 300px;
            margin: 15px;
            padding: 10px;
            box-sizing: border-box;
            text-align: center;
            transition: all 0.3s ease;
            overflow: hidden;
            justify-content: space-evenly;
            align-items: baseline;
            flex-wrap: wrap;
        }

            .performer-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

            .performer-card img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
            }

            .performer-card h5 {
                margin: 10px 0;
                color: #333;
            }

            .performer-card p {
                margin: 5px 0;
                color: #666;
            }

        .button-container {
            display: flex;
            justify-content: center;
            margin-top: auto;
        }

        .custom-button,
        .custom-button2 {
            background-color: #4d372f;
            color: #fff;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 5px;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }

            .custom-button:hover {
                background-color: #634b3b;
            }

            .custom-button2:hover {
                background-color: #8a6450;
            }
    </style>

</head>
<body>
    <div class="container">
        <div class="filter-container">
            <form method="post" asp-action="Index">
                <div class="input-group md-form form-control-sm form-2 pl-0">
                    <input name="singername" class="form-control my-0 p-lg-1 red-border" type="text" placeholder="Search singer by name" />
                    <div class="input-group-append">
                        <span class="input-group-text list-group-numbered lighten-3" style="background-color: #4D372F;">
                            <input type="submit" value="Search" style="border:none; background-color:#4D372F;" />
                        </span>
                    </div>
                </div>
            </form>

            <p></p>

            <div class="card filter-card mb-3" style="width: 100%; padding: 20px;">
                <label for="" class="form-label" style="margin-top:5px; color: #A27868; -webkit-text-stroke: 1px #D4A8A8; text-stroke: 1px #D4A8A8; text-transform: uppercase; font-size:22px;">Filter by </label>

                <form method="post" asp-action="FilterByStars">
                    <label for="" class="form-label" style="color:#A27868; text-transform:uppercase; font-weight:bold;">Rating: </label>
                    <input name="stars" class="form-control my-0 p-lg-1 red-border" type="number" placeholder="Stars" />
                </form>
                <br />
                <form method="post" asp-action="FilterByGenre">
                    <label for="" class="form-label" style="color:#A27868; text-transform:uppercase; font-weight:bold;">Genre: </label>
                    <input name="genre" class="form-control my-0 p-lg-1 red-border" type="text" placeholder="Genre" />
                </form>
                <br />
                <form method="post" asp-action="FilterByPrice" style="margin-bottom:15px;">
                    <label for="" class="form-label" style="color:#A27868; text-transform:uppercase; font-weight:bold;">Price: </label>
                    <input name="price" class="form-control my-0 p-lg-1 red-border" type="number" placeholder="Price" />
                </form>
            </div>
        </div>

        <div class="performers-container">
            @foreach (var performer in Model)
            {
                <div class="performer-card">
                    <img src="@performer.ImageUrl" alt="PerformerImage">
                    <h5>@performer.Name</h5>
                    <p>Rating: <span>@performer.Rating stars</span></p>
                    <p>Genre: <span>@performer.Genre.Name</span></p>
                    <p>Type: <span>@performer.Type</span></p>
                    <p>Experience: <span>@performer.Experience</span></p>
                    <p>Price per hour: <span>@performer.Price</span></p>
                    <div class="button-container">
                        <a asp-controller="Performer" asp-action="ShowMoreInfo" asp-route-id="@performer.Id" class="btn custom-button">More Info</a>
                        <a asp-controller="Event" asp-action="Add" asp-route-performerId="@performer.Id" asp-route-performerName="@performer.Name" class="btn custom-button2">Add to Event</a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
