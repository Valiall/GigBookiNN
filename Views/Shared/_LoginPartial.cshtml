@using Microsoft.AspNetCore.Identity
@inject SignInManager<EventOrganiser> SignInManager
@inject UserManager<EventOrganiser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link" style="color:white;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name'<span style="text-transform:lowercase;">s</span> Profile</a>
    </li>
    <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link" style="color:white;">Logout</button>
            </form>

    </li>
}
else
{
    <li class="nav-item">
            <a style="color:#faf0e6" class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a style="color:#faf0e6" class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
